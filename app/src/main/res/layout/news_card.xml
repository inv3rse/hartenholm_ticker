<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Samstag, 19.07.2015"
            style="@style/AppTheme"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold|italic"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_card_content"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Drei neue Spieler für den TuS! Mit Robert Wasner (SG Trave 06 A-Jugend), Tolga Güvenir (Fethispor Kaltenkirchen) und Maurice Borgert (SV Schackendorf) streifen sich drei Spieler in der kommenden Spielzeitsportlich alles Gute.Wir sind gespannt was sich in den kommenden Tagen und Wochen noch ergibt. Wir halten euch auf dem Laufenden."
                style="@style/AppTheme"
                android:textSize="@dimen/abc_text_size_small_material"/>

            <!--<ImageView-->
                <!--android:id="@+id/player_image"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:contentDescription="@string/player_name_descr"-->
                <!--android:layout_gravity="center_horizontal"/>-->

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>